# === Email sending config (Microsoft 365 via STARTTLS on 587) ===
MAIL_TEST=0                       # 0 = send real email; 1 = use Ethereal test inbox

SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false                 # false for 587 (STARTTLS)
SMTP_REQUIRE_TLS=true
SMTP_USER=you@maramed.com         # <--- fill locally (do NOT commit secrets)
SMTP_PASS=YOUR_APP_PASSWORD_HERE  # <--- fill locally (app password / SMTP auth)
SMTP_FROM=you@maramed.com         # sender address (usually same as SMTP_USER)

# Recipients
CONTACT_TO=custsupport@maramed.com
# CONTACT_CC=
# CONTACT_BCC=

# Debug/logging
SMTP_LOG=1
SMTP_TLS_REJECT_UNAUTHORIZED=true
